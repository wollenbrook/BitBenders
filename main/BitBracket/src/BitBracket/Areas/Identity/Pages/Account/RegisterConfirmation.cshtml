@page
@model RegisterConfirmationModel

@{
    ViewData["Title"] = "Register Confirmed";
}

<body class="announcement-background">
    <div class="section-gap"></div>
    <div class="ui container">
        <h1 class="title-styling">@ViewData["Title"]</h1>
        <div class="ui message">
            @if (Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered. For information on how to configure a real email sender, please see <a href="https://aka.ms/aspaccountconf" target="_blank" rel="noopener noreferrer">these docs</a>. Normally, this link would be emailed to you: <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="ui primary">Click here to confirm your account</a>.
                </p>
                <script>
                    document.addEventListener("DOMContentLoaded", function() {
                        // Optionally, automatically click the confirmation link
                        // document.getElementById("confirm-link").click();
                    });
                </script>
            }
            else
            {
                <p>Please check your email to confirm your account.</p>
            }
        </div>
    </div>
</body>
