@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<body class="announcement-background"></body>
<div class="ui container">
    <h2 class="ui dividing header">@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    <form class="ui form" id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="ui message negative"></div>

        <div class="field">
            <label for="Input.NewUserName">Username</label>
            <input asp-for="Input.NewUserName" type="text" placeholder="Please choose your username.">
            <span asp-validation-for="Input.NewUserName" class="ui pointing red basic label"></span>
        </div>

        <div class="field">
            <label for="Input.PhoneNumber">Phone Number</label>
            <input asp-for="Input.PhoneNumber" type="text" placeholder="Please enter your phone number.">
            <span asp-validation-for="Input.PhoneNumber" class="ui pointing red basic label"></span>
        </div>

        <button id="update-profile-button" type="submit" class="ui button primary fluid">Save Profile</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
